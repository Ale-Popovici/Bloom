{
    "manifest_version": 3,
    "name": "BLOOM - Document Assistant",
    "version": "1.0.0",
    "description": "Chat with your local PDF and Word documents",
    "icons": {
        "16": "assets/icons/favicon.ico",
        "48": "assets/icons/icon-192.png",
        "128": "assets/icons/icon-512.png"
    },
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "assets/icons/favicon.ico",
        "48": "assets/icons/icon-192.png",
        "128": "assets/icons/icon-512.png"
      }
    },
    "permissions": [
      "storage",
      "activeTab"
    ],
    "background": {
      "service_worker": "background/background.js"
    },
    "host_permissions": [
      "http://localhost:8000/*"
    ]
  }